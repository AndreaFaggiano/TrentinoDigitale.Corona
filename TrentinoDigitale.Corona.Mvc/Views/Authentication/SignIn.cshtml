@model TrentinoDigitale.Corona.Mvc.Models.Authentication.SignInModel
@{
    ViewBag.Title = "SignIn";
}

<div class="container">
    <div class="row">
        <div class="col-md-3"></div>
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h3>Autenticazione</h3>                    
                </div>
                <div class="card-body">
                    @using (Html.BeginForm("SignIn", "Authentication", FormMethod.Post))
                    {
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                        <div class="form-container">
                            <label for="userName">
                                Username:
                            </label>
                            @Html.TextBoxFor(e => e.UserName, new { @class = "form-control" })
                            @Html.ValidationMessageFor(e => e.UserName, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-container">
                            <label for="password">
                                Password:
                            </label>
                            @Html.PasswordFor(e => e.Password, new { @class = "form-control" })
                            @Html.ValidationMessageFor(e => e.Password, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-container">
                            <div class="row">
                                <div class="col-md-6">
                                    <button class="btn btn-primary btn-block" type="submit">
                                        Accedi
                                    </button>
                                </div>
                                <div class="col-md-6">
                                    @Html.ActionLink("Autocomplete", "Autocomplete", "Authentication", null, new { @class = "btn btn-primary btn-block" })
                                </div>
                            </div>
                        </div>
                    }
                </div>
                @if (!string.IsNullOrEmpty(Model.ErrorMessage)) 
                {
                    <div class="card-footer">
                        <div class="alert alert-warning">
                            Attenzione! @Model.ErrorMessage
                        </div>
                    </div>    
                }
            </div>
        </div>
        <div class="col-md-3"></div>
    </div>
</div>



